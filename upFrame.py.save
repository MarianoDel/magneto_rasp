    elif signal == 5:
        image = wx.Image("/home/pi/Desktop/Magneto_simple_v1/UpFrameImagenes/Cuadrada60Hz.png", wx.BITMAP_TYPE_ANY)


    return image


class UpFrame(wx.Panel): #(wx.PyPanel): #PyPanel also works
